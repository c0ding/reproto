/* vim: ft=css
 */

* {
  box-sizing: border-box;
}

body {
  background-color: {{background_color}};
  font-family: {{font_family}};
  font-size: {{font_size}};
}

table {
    border-spacing: 0 5px;
    border-collapse: separate
}

a {
    text-decoration: none;
    color: none;
}

section {
    margin: 10px;
}

.container {
    max-width: 1020px;
    margin-left: auto;
    margin-right: auto;
}

